	 if (a >= b) {
		 n = pow((a - b), 1.0 / 3.0);
	 }
	 else {
		 n = a * a + ((a - b) / sin(a*b));
	 }
	 if (n < b) {
		 m = (n + a) / -b + pow((sin(a)*sin(a) - cos(n)), 1 / 2);
	 }
	 else if (n == b) {
		 m = b * b + sin(n*a) / cos(n*a);
	 }
	 else {
		 m = b * b*b + n * a*a;
	 }
	 cout << "a="<< a << endl << "b="<< b << endl<< "n=" << n << endl <<"m="<< m << endl;

