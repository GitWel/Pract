#include "pch.h"
#include <iostream>
using namespace std;

class figure{
protected:
	int angle;
	virtual void name() = 0;
};

class four:public figure {
public: four() { angle = 4; }
};

class Romb : four {
public:
	int s1;
	int s2;
	Romb(int a, int b) {
		s1 = a;
		s2 = b;
	}
	void name() {
		cout << "Romb";
	}
};

class Rectangle : four {
public:
	int s;
	Rectangle(int a) {
		s = a;
	}
	void name() {
		cout << "Rectangle";
	}
};
