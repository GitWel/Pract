#include <string>
using namespace std;

class Screen{
protected:
	int diagonal;
	int resolution;
};

class Keyboard {
protected:
	int number_of_keys;
};


class Notebook :public Screen, public Keyboard{
public:
	string model;
	Notebook (string a, int b, int c, int d) {
		model = a;
		diagonal= b;
		resolution = c;
		number_of_keys = d;
	}
};

