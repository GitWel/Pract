#include "pch.h"
#include <iostream>
using namespace std;

class Property {
protected:
	double  worth;
public:
	Property() {}
	virtual double res() = 0;
};

class Appartment : public Property {
public:
	Appartment(double a) { worth = a; } 
		double res() {
			return worth / 1000;
	  }
};

class Car : public Property {
public:
	Car(double a) { worth = a; }
	double res() {
		return worth / 200;
	}
};
 
class CountryHouse : public Property {
public:
	CountryHouse(double a) { worth = a; }
	double res() {
		return worth / 500;
	}
};

int main() {
	setlocale(LC_ALL, "Russian");
	Property **a = new Property*[7];
	a[0] = new Appartment(1500000);
	a[1] = new Appartment(800000);
	a[2] = new Appartment(500000);
	a[3] = new Car(600000);
	a[4] = new Car(260000);
	a[5] = new CountryHouse(2000000);
	a[6] = new CountryHouse(3500000);
	for (int i = 0; i < 7; i++) {
		cout << "Налог; " << a[i]->res() << endl;
	}
	delete[]a;

	system("pause");
	return 0;
}
