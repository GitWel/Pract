#include "pch.h"
#include <iostream>
using namespace std;

void sort(int* array, int size) {
	int j, k;
	for (int i = 1; i < size; i++) {
		j = i - 1;
		k = i;
		while (array[k] < array[j] && j >= 0 && k>0) {
			swap(array[k],array[j]);
			j--;
			k--;
			if (j == -1)break;
		}
	}
	cout << "Sort(int):" << endl;
	for (int i = 0; i < size; i++)
		cout << "array[" << i << "]=" << array[i] << " ";
}
