#include "pch.h"
#include <iostream>
using namespace std;

void sort(int* array, int size) {
	int p = 1;
	while (p != 0) {
		p = 0;
		for (int i = 0; i < size-1; i++) {
			if (array[i + 1] < array[i]) {
				swap(array[i], array[i + 1]);
				p++;
			}
		}
	}
	cout << "Sort(int):" << endl;
	for (int i = 0; i < size; i++)
		cout << "array[" << i << "]=" << array[i] << " ";
}
